{
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.json" },
  "extends": [
    "./node_modules/gts"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    // Core rules
    "linebreak-style": ["warn", "unix"],
    "no-useless-rename": "warn",
    "object-shorthand": "warn",
    "quotes": ["warn", "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  },
  "settings": {
    "import/resolver": {
      "./.eslint-resolver": {}
    }
  }
}
